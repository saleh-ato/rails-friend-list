  Friends
<% end %>
  <h1>Friends List</h1>
  <div id="friends">
    <%# <% @friends.each do |friend| %> 
      <%# <%= render friend %> 
       <%# <p><%= link_to "Show this friend" , friend %></p> 
        <%# <% end %> 
          <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
              <tr>
                <%#<th scope="col">#</th>%>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Twitter</th>
                <th scope="col">User Id</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @friends.each_with_index do |friend, index| %>
                <%if friend .user == current_user%>
                <tr>
                  <%#<th scope="row"><%= index + 1 %></th>
                  <td scope="col">
                    <%= friend.first_name %>
                  </td>
                  <td scope="col">
                    <%= friend.last_name %>
                  </td>
                  <td scope="col">
                    <%= friend.email %>
                  </td>
                  <td scope="col">
                    <%= friend.phone %>
                  </td>
                  <td scope="col">
                    <%= friend.twitter %>
                  </td>
                  <td scope="col">
                    <%= friend.user_id %>
                  </td>
                  <td scope="col"><%= link_to "Show" , friend, class:"btn btn-success mb-2" %> <%= link_to "Edit" , edit_friend_path(friend), class:"btn btn-primary mb-2" %> <%= button_to "Delete", friend, method: :delete, class:"btn btn-danger", data: { turbo_confirm: "Are you sure you want to delete this friend?" } %></td>
                </tr>
                <% end %>
                <% end %>
            </tbody>
          </table>
  </div>
<%= link_to "New friend" , new_friend_path, class:"btn btn-secondary" %>